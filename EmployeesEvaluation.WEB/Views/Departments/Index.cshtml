
<div class="location-bar">
    <h2>Departments</h2>
</div>


<div class="row panel">
    <div class="col-xs-18 col-md-12">
        @(Html.Kendo().Grid<EmployeesEvaluation.WEB.Dtos.DepartmentDto>()
                .Name("department")
                .Columns(columns =>
                {
                    columns.Bound(p => p.Name);
                    columns.Command(command => { command.Edit(); command.Destroy(); }).Width(225);
                })
                .ToolBar(toolbar => toolbar.Create().Text("New Department"))
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:550px;" })
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Model(p => p.Id(m => m.Id))
                    .ServerOperation(false)
                    .PageSize(20)
                    .Read(read => read.Action("List", "Departments"))
                    .Create(create => create.Action("Create", "Departments"))
                    .Update(update => update.Action("Update", "Departments"))
                    .Destroy(delete => delete.Action("Delete", "Departments"))
                ).Deferred()
        )

        @* All initialization scripts are rendered to the bottom of the page, see _Layout.cshtml *@
        @section scripts {
            @Html.Kendo().DeferredScripts()
        }
    </div>
</div>